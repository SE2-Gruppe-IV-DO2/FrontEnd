        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/handCardsButton"
        android:layout_width="90dp"
        android:layout_height="45dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="204dp"
