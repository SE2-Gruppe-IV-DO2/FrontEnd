        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.309"
        app:srcCompat="@drawable/card_back" />


    <FrameLayout
        android:id="@+id/tableTricksPlayer1"
        android:layout_width="485dp"
        android:layout_height="220dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toStartOf="parent" >

    </FrameLayout>

    <FrameLayout
        android:id="@+id/tableTricksPlayer2"
        android:layout_width="485dp"
        android:layout_height="200dp"
        android:layout_marginTop="56dp"
        android:rotation="53"
        app:layout_constraintEnd_toStartOf="@+id/tableTricksPlayer1"
        app:layout_constraintHorizontal_bias="0.381"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <FrameLayout
        android:id="@+id/tableTricksPlayer4"
        android:layout_width="485dp"
        android:layout_height="200dp"
        android:layout_marginBottom="24dp"
        android:rotation="134"
        app:layout_constraintBottom_toTopOf="@+id/tablePlayedCard5"
        app:layout_constraintStart_toStartOf="parent"
