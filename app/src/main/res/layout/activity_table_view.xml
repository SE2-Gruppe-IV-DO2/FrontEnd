<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_background"
    tools:context=".activities.TableView">

    <ImageView
        android:id="@+id/tablePlayedCard1"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="175dp"
        android:layout_marginTop="84dp"
        android:contentDescription="@string/playedcard1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/tablePlayedCard4"
        android:visibility="invisible"
        android:layout_width="100dp"
        android:layout_height="175dp"
        android:contentDescription="@string/playedcard4"
        android:rotation="235"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/card_back" />

    <ImageView
        android:id="@+id/tablePlayedCard5"
        android:visibility="invisible"
        android:layout_width="100dp"
